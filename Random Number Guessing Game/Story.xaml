<Page x:Class="Random_Number_Guessing_Game.Story"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Random_Number_Guessing_Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Story" Background="#d8b579">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="Story.png"></Image>
        <Button Grid.Row="1" Name="Back" Content="Back" Width="300" Height="100" FontSize="40" Foreground="Firebrick" FontWeight="Heavy" HorizontalAlignment="Center" Click="Back_Click"/>
    </Grid>
</Page>
